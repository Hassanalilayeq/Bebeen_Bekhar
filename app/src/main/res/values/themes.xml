<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BebeenBekhar" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/white_light</item>
        <item name="colorOnPrimary">@color/black</item>

        <!--  Color Secondary for this project -->
        <item name="colorSecondary">@color/red_500</item>
        <item name="colorSecondaryVariant">@color/red_500</item>
        <item name="colorOnSecondary">@color/white_light</item>

        <item name="fontFamily">@font/primary_regular</item>

        <item name="colorSurface">?attr/colorPrimaryVariant</item>

        <item name="android:statusBarColor" tools:targetApi = "l">?attr/colorPrimary</item>

        <item name="android:windowLightStatusBar" tools:targetApi = "m">true</item>
    </style>

    <style name="myToolbar" parent="Theme.MaterialComponents">
        <item name="fontFamily">@font/primary_bold</item>
        <item name="android:textSize">28sp</item>
    </style>
</resources>